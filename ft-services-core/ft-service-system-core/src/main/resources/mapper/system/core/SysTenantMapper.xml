    </select>
    
    <select id="selectSysTenantById" parameterType="Long" resultMap="SysTenantResult">
        SELECT
        	t.`tenant_id`,
        	t.`tenant_name`,
        	t.`tenant_key`,
        	t.`tenant_status`,
        	t.`validity_status`,
        	t.`effective_date`,
        	t.`expiry_date`,
        	t.`contact_user`,
        	t.`contact_number`,
        	u.user_name administrator_user_name,
        	u.nick_name administrator_nick_name,
        	t.`menu_status`,
        	t.`dept_status`,
        	t.`role_status`,
        	t.`post_status`,
        	t.`user_status`,
        	t.`menu_check_strictly`,
        	t.`dept_check_strictly`,
        	t.`checked_dept_parent`,
        	t.`del_flag`,
        	t.`create_user`,
        	t.`create_time`,
        	t.`update_user`,
        	t.`update_time`,
        	t.`remark`
        	t.`usersNumLimit`
        FROM
        	`sys_tenant` t
        LEFT JOIN sys_user u ON t.tenant_key = u.tenant_key AND t.administrator_user_name = u.user_name
        WHERE
        	t.`tenant_id` = #{tenantId}
    </select>

